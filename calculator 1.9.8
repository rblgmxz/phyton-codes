 operacao = input("Você quer somar, subtrair, multiplicar ou dividir?")
 num1 = int(input(" Escreva um número: "))
 num2 = int(input(" Agora escreva outro número: "))
 if(operacao == "somar"):
     result_som = num1 + num2 
     print(f"O resultado da soma é: {result_som}")
 elif(operacao == "subtrair"):
     result_sub = num1 - num2
     print(f"O resultado da subtração é: {result_sub}") 
 elif(operacao == "dividir"):
     result_div = num1 / num2
     print(f"O resultado da divisão é: {result_div}") 
 elif(operacao == "multiplicar"):
     result_mult = num1 * num2 
     print(f"O resultado da multiplicação  é: {result_mult}")
 else:
     print("Operação inválida")
